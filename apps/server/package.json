{
  "name": "server",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "start": "bun migrate && NODE_ENV=production bun run ./src/index.ts",
    "lint": "bun x eslint",
    "lint:fix": "bun x eslint --fix",
    "generate": "bun x drizzle-kit generate",
    "push": "bun x drizzle-kit push",
    "migrate": "bun x drizzle-kit migrate",
    "studio": "bun x drizzle-kit studio",
    "erd": "bun x @liam-hq/cli erd build --format drizzle --input src/db/schema.ts && sleep 3 && npx serve dist/"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.930.0",
    "@aws-sdk/s3-request-presigner": "^3.958.0",
    "@elysiajs/bearer": "^1.4.1",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/openapi": "^1.4.12",
    "@elysiajs/opentelemetry": "^1.4.10",
    "@elysiajs/server-timing": "^1.4.0",
    "@faker-js/faker": "^10.1.0",
    "@paralleldrive/cuid2": "^3.0.4",
    "@sinclair/typebox": "^0.34.0",
    "@types/qrcode": "^1.5.6",
    "@verrou/core": "^0.5.1",
    "better-auth": "^1.4.7",
    "chromiumly": "^4.2.3",
    "cloudinary": "^2.8.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "drizzle-seed": "^0.3.1",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.4.16",
    "elysia-autoload": "^1.7.0",
    "elysia-healthcheck": "^1.0.0",
    "env-var": "^7.5.0",
    "ioredis": "^5.8.2",
    "logestic": "^1.2.4",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "posthog-node": "^5.11.2",
    "qrcode": "^1.5.4",
    "resend": "^6.6.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@coderina-ams/transactional": "workspace:*",
    "@electric-sql/pglite": "^0.3.14",
    "@elysiajs/eden": "^1.4.5",
    "@types/bun": "^1.3.2",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.1",
    "eslint-plugin-drizzle": "^0.2.3",
    "husky": "^9.1.7",
    "ioredis-mock": "^8.13.1",
    "pactum": "^3.9.0",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "@sinclair/typebox": "0.34.0"
  }
}
